{
	"name": "bilan-energie",
	"version": "0.0.1",
	"scripts": {
		"watch": "rollup -c build/rollup.config.js --environment target:dev,serve --watch",
		"build:dev": "rollup -c build/rollup.config.js --environment target:dev",
		"serve:dev": "cd ./build/src/dev && superstatic --port 5000 --host localhost",
		"build:devWeb": "rollup -c build/rollup.config.js --environment target:devWeb",
		"deploy:devWeb": "cd ./build/src/dev && firebase deploy"
	},
	"dependencies": {
		"highcharts": "^7.1.2",
		"lit-element": "^2.2.0",
		"pwa-helpers": "^0.9.1",
		"redux": "^4.0.1"
	},
	"devDependencies": {
		"@open-wc/building-rollup": "^0.5.7",
		"rimraf": "^2.6.3",
		"rollup": "^1.16.2",
		"rollup-plugin-commonjs": "^10.0.0",
		"rollup-plugin-copy": "^3.0.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-terser": "^5.0.0",
		"rollup-plugin-visualizer": "^2.4.3",
		"superstatic": "^6.0.4"
	}
}
